<Window x:Class="_1lb.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" Height="150" Width="300"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontSize="15" Content="Введите имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox FontSize="20" Text="" x:Name="UserNameTextBox" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="260"/>
        <Button Content="Отмена" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,10,0" Width="75" Click="CancelButton_Click" />
        <Button FontSize="15" Content="OK" HorizontalAlignment="Right" Margin="0,90,10,10" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>

